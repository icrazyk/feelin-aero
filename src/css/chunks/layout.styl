$xsl-devices-min = 480px
$sm-devices-min = 768px
$md-devices-min = 992px
$lg-devices-min = 1200px

$font-size = 16px
$font-color = #2b2937; 

$menu-color = #fff
$menu-bg = #6666cc

$container-max-width = 1020px

$main-two-column-max-width = $container-max-width
$main-one-column-max-width = 840px

for index in 1 2 3 4 5
  .z-index-{index}
    z-index index

clearfix()
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both
    
input
  appearance none

label
  display block

textarea
  resize none
  border-radius 4px
  border 1px solid rgba($menu-bg, 0.7)
  padding: 10px
  width 100%
  outline none
  transition height 0.3s ease
  height 80px
  &:hover
  &:focus
    border-color rgba($menu-bg, 1)
    
input[type="text"]
input[type="email"]
input[type="url"]
input[type="tel"]
select
  border-radius 4px
  border 1px solid rgba($menu-bg, 0.7)
  padding: 5px 10px
  width 100%
  outline none
  &:hover
  &:focus
    border-color rgba($menu-bg, 1)
select
  padding: 5px 6px

input[type="submit"]
  @extend .btn
  padding 7px 12px
  border-radius 4px
  border 0
  color #fff
  background-color $menu-bg
  &:hover
  &:focus
    background-color darken($menu-bg, 5%)
  &:active
    background-color darken($menu-bg, 10%)

make-button(color = #fff, font-size = 1em, bg = #6666cc, pg = 15px, pv = 10px)
  @extend .btn
  display inline-block
  border-radius 4px
  border 0
  line-height 1
  color color
  font-size font-size
  padding pv pg
  background-color bg
  &:hover
  &:focus
    background-color darken(bg, 5%)
    color color
  &:active
    background-color darken(bg, 10%)
    color color

.section
  clearfix()
  @media (min-width: $md-devices-min)
    padding-left 5%
    padding-right 5%

*
  box-sizing border-box

.container
  padding 0 20px
  max-width 1020px
  margin 0 auto

.row
  clearfix()
  margin 0 -20px

.screen-reader-text
  display none

body
input
button
textarea
  font-family: 'Roboto', sans-serif;

body
  background #fff
  line-height 1.375
  font-size $font-size
  color $font-color

a
  color darken($menu-bg, 5%)
  &:visited
    // color lighten($menu-bg, 15%)
  &:hover
    color darken($menu-bg, 15%)
  &:active
    color darken($menu-bg, 25%)

p
  margin 0 0 1em
  
.wrapper
  margin-top 36px
  background url(img/header-bg.jpg) no-repeat center top
  background-size contain
  @media (min-width: $xsl-devices-min)
    background-size 480px auto
  @media (min-width: $sm-devices-min)
    background-size 768px auto
  @media (min-width: $md-devices-min)
    margin-top 0px
    background-size 1000px auto
