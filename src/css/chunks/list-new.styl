.list-new
  margin 0 -7px
  padding 0
  list-style-type none
  &__item
    padding 0 7px
    margin-bottom 15px
    @media (min-width: $xsl-devices-min)
      float left
      width 50%
    @media (min-width: $sm-devices-min)
      width 33.333%
      
.newitem
  height 200px
  position relative
  overflow hidden
  cursor pointer
  &__img
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    background-repeat no-repeat
    background-position center top
    background-size cover
    transition transform 0.5s
    ^[0]:hover &
      transform scale(1.1) rotate(2deg)
  &__title
    position absolute
    bottom 0
    left 0
    right 0
    padding 20px 10px 10px
    color #fff
    background linear-gradient(to bottom,  rgba(68,69,137,0) 0%,rgba(68,69,137,0.8) 74%)
