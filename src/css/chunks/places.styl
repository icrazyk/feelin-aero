.places-tabs
  margin 0 -10px 15px 
  padding 0
  list-style-type none
  &__item
    display inline-block
    padding 5px 10px
    span
      cursor pointer
      color darken($menu-bg, 5%)
      display block
      border-bottom 1px dashed darken($menu-bg, 5%)
      &:hover
        color darken($menu-bg, 15%)
        border-color darken($menu-bg, 15%)
      ^[1]_active span
      ^[1]_active span:hover
        color #000
        border-color transparent
        
.places-contents
  margin 0
  padding 0
  list-style-type none
  &__item
    display none
    &_active
      display block

.places-contents-widget
  &__item
    &_gismeteo
    &_meteo
      margin-bottom 15px
      display inline-block
      vertical-align top
    &_gismeteo
      margin-right 10px
      
.winguru
  overflow hidden

.places-widget-loaded
  padding 20px
  border 5px solid lighten($menu-bg, 50%)
  background lighten($menu-bg, 60%)
  border-radius 10px
  color #fff
  font-weight 700
  font-size 18px
  text-align center
  margin-bottom 20px
  &__title
    margin-top 15px
