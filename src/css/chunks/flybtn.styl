@keyframes slowjiggle
  0% 
    transform perspective(100px) rotateY(-30deg)
  100%
    transform perspective(100px) rotateY(30deg)

.flybtn
  display none
  height 80px
  width 80px
  border-radius 50%
  background #dd0c32
  background radial-gradient(ellipse at center, #dd0c32 0%, #5863b8 100%)
  line-height 80px
  vertical-align middle
  text-align center
  cursor pointer
  font-family 'Roboto', sans-serif
  font-weight 700
  text-transform uppercase
  font-size 12px
  color #fff
  box-shadow 0 0 25px -5px rgba(0, 0, 0, 0.5)
  animation slowjiggle 6s ease-in-out infinite alternate both
  position relative
  overflow hidden
  @media (min-width: $md-devices-min)
    display block
  &:before
    position absolute
    content ''
    display block
    left 0
    top 0
    bottom 0
    right 0
    opacity 0
    transition opacity .5s
    background: radial-gradient(ellipse at center, #dd0c32 33%, #dd0c32 33%, #5863b8 100%);
    z-index 1
  &:hover:before
    opacity 1
  span
    position relative
    z-index 2
    border-bottom 2px solid #fff
