.breadcrumbs
  @extend .section
  padding-top 15px
  @media (min-width: $md-devices-min)
    padding-top 0

.breadcrumb
  clearfix()
  margin 0
  padding 0
  list-style-type none
  li
    float left
    &:after
      content "\2192"
      font-size 10px
      font-weight bold
      margin 0 3px
      vertical-align middle
      
    &.active
      width 100%
      &:after
        display none
  a
    font-size 12px
    text-decoration none
    opacity 0.7
    &:hover
      opacity 1
  h1
    margin 0
    font-size 23px
    @media (min-width: $sm-devices-min)
      font-size 32px
