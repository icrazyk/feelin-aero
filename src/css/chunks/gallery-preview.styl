.gallery-preview
  display block
  position relative
  padding-left 20px
  padding-top 20px
  &__image
    display block
    img
      max-width 100%
      display block
      margin auto
      box-shadow -15px -15px 0px -5px rgba(197, 197, 197, 0.7), -30px -30px 0 -10px rgb(239, 239, 239)
  &__title
    display block
    position absolute
    left 20px
    bottom 0
    font-size 20px
    background rgba($menu-bg, 0.9)
    border 1px solid darken($menu-bg, 15%)
    border-left none
    border-bottom none
    padding 10px 15px
    text-decoration none
    color #fff
    border-radius 0 4px 0 0
