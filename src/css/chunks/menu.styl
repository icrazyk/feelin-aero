.menu
  margin 0
  padding 0
  list-style-type none
  &-toggle
    padding 10px 20px
    float left
    color $menu-color
    background darken($menu-bg, 5%)
    border-right 1px solid darken($menu-bg, 8%)
    &__icon
      float left
      width 25px
      margin-right 10px
      padding-top 1px
      span
        display block
        margin 3px 0
        background $menu-color
        height 2px
    &__title
      float left
  &-mobile
    display none
  .header &
    clearfix()
    background rgba($menu-bg, 0.9)
    border-radius 8px
    box-shadow 0 0 20px rgba($menu-bg, 0.6)
    a
      display block
      padding 10px 20px
      color $menu-color
      text-decoration none
      font-size 15px
      @media (min-width: $lg-devices-min)
        font-size 16px
      &:hover
        background darken($menu-bg, 10%)
      &:active
        background darken($menu-bg, 15%)
    .current-menu-item > a
      background darken($menu-bg, 5%)
    & > .menu-item
      float left
      position relative
      &:hover 
        .sub-menu
          display block
      &:first-child > a
        border-radius 10px 0 0 10px
    .sub-menu
      display none
      position absolute
      top 100%
      left 0
      margin 0
      padding 0
      list-style-type none
      background $menu-bg
      border-radius 0 0 4px 4px
      & > .menu-item:last-child > a
        border-radius 0 0 4px 4px
    .current-page-ancestor > a
      background darken($menu-bg, 3%)
      
