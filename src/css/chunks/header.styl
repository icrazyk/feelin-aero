.header
  @extend .section
  padding-top 30px
  position relative
  height 115px
  @media (min-width: $xsl-devices-min)
    height 150px
  @media (min-width: $sm-devices-min)
    padding-top 50px
    height 260px
  @media (min-width: $md-devices-min)
    background none
    padding-top 25px
    height 340px
  &__menu
    margin 0 -20px
    @media (min-width: $sm-devices-min)
      margin-top 80px
    @media (min-width: $md-devices-min)
      margin 30px 0 0
  &-logo
    display block
    width 130px
    height 91px
    background url(img/logo.png) no-repeat
    background-size contain
    margin 0 auto
    @media (min-width: $sm-devices-min)
      width 198px
      height 139px
  &-menu
    &__menu
      clearfix()
      display none
      @media (min-width: $md-devices-min)
        display block
    &__toggle
      position fixed
      left 0
      top 0
      right 0
      z-index 1
      background $menu-bg
      box-shadow 0 0 5px rgba(0, 0, 0, 0.6)
      clearfix()
      @media (min-width: $md-devices-min)
        display none
