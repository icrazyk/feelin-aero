.header
  @extend .section
  padding-top 30px
  position relative
  height 115px
  @media (min-width: $xsl-devices-min)
    height 150px
  @media (min-width: $sm-devices-min)
    padding-top 50px
    height 260px
  @media (min-width: $md-devices-min)
    background none
    padding-top 25px
    height 340px
  &__menu
    margin 0 -20px
    @media (min-width: $sm-devices-min)
      margin-top 80px
    @media (min-width: $md-devices-min)
      margin 30px 0 0
  &__search
    position absolute
    top 0px
    right 20px
    width 290px
  &-logo
    display block
    width 250px
    height 169px
    background url(img/header-logo-noise.png) no-repeat center center / 250px
    margin 0 auto

  &-menu
    &__menu
      clearfix()
      display none
      @media (min-width: $md-devices-min)
        display block
    &__toggle
      position fixed
      left 0
      top 0
      right 0
      z-index 1
      background $menu-bg
      box-shadow 0 0 5px rgba(0, 0, 0, 0.6)
      clearfix()
      @media (min-width: $md-devices-min)
        display none
  .container
    position relative
  &__flybtn
    position absolute
    right: 45px;
    top: 10px;
    @media (min-width: $md-devices-min)
      right 20px
      top 85px
