.comments
  &-title
    font-size 16px

@keyframes awaiting-moderation
  0%   
    background #60d95d
  50% 
    background #48a946
  100%   
    background #60d95d
    
.comment
  &-reply-title
    margin-bottom 10px
  &-notes
    font-size 0.8em
  &-form
    textarea
      height 50px
      &.comment-dirty
      &:focus
        height 80px
        
    &-author
    &-email
    &-url
      width 60%
  &-list
    padding-left 0
    list-style-type none
    .children
      list-style-type none
      padding-left 15px
  &-author
    white-space nowrap
    .avatar
      border-radius 4px
      display inline-block
      vertical-align middle
      width 35px
      height 35px
    .fn
      font-weight normal
      display inline-block
      vertical-align middle
      margin-left 5px
      font-size 0.9em
    .says
      display inline-block
  &-metadata
    font-size 0.7em
    text-align right
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    position absolute
    top 5px
    right 5px
  &-meta
    clearfix()
    background-color lighten($menu-bg, 90%)
    padding 5px
    border-radius 4px
    position relative
  &-body
    margin-bottom 20px
  &-content
    margin-top 10px
    p
      margin-bottom 5px
  &-reply-link
    make-button(#fff, 0.85em, $menu-bg, 5px, 4px)
  &-awaiting-moderation
    margin-bottom 0
    margin-top 3px
    padding 2px 8px
    background-color #60d95d
    border-radius 4px
    animation awaiting-moderation 2s infinite;
