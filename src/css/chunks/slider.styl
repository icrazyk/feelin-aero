.slide
  height 250px
  background-repeat no-repeat
  background-position center
  background-size cover
  @media (min-width: $xsl-devices-min)
    height 320px
  @media (min-width: $sm-devices-min)
    height 350px
  &__content
    padding 20px 20px 0
    text-align center
    max-width 460px
    @media (min-width: $xsl-devices-min)
      text-align left
      padding 60px 70px 0
    @media (min-width: $sm-devices-min)
      max-width 550px
      
.slide-content
  font-size 24px
  @media (min-width: $sm-devices-min)
    font-size 30px
  &__title span
    display inline
    font-weight bold
    color #fff
    background-color rgba($menu-bg, 0.9)
    box-shadow -10px 0 0 0 rgba($menu-bg, 0.9), 10px 0 0 0 rgba($menu-bg, 0.9)
    padding 2px 0      
  &__link
    margin 20px 0 0 -10px
    a
      @extend .btn
      padding 5px 10px
      background-color rgba(#ec0000, 0.8)
      color #fff
      font-weight 300
      transition box-shadow 0.2s
      border-radius 7px
      &:hover
        background-color #ec0000
        box-shadow 0 0 10px #ec0000
    
.slider
  &_main-page
    margin-top 25px
    ^[0]__this
        overflow hidden
        height 250px
        @media (min-width: $xsl-devices-min)
          height 320px
        @media (min-width: $sm-devices-min)
          height 350px
  .bx-wrapper
    box-shadow none
    border none
    margin-bottom 25px
    .bx-pager
      bottom 20px
      text-align right
      padding-right 10px
    .bx-prev
      background: url(img/controls.png) no-repeat 0 -32px;
      &:hover
        background-position 0 0
      @media (min-width: $md-devices-min)
        left -40px
    .bx-next
      background: url(img/controls.png) no-repeat -43px -32px;
      &:hover
        background-position -43px 0
      @media (min-width: $md-devices-min)
        right -40px
    


