.breadcrumb
  clearfix()
  margin 0
  padding 0 15px
  list-style-type none
  li
    float left
    &:after
      content "\2192"
      font-size 10px
      font-weight bold
      padding 0 3px
      vertical-align middle
      display inline-block
    &.active
      width 100%
      &:after
        display none
  a
    font-size 12px
    opacity 0.7
    display inline-block
    vertical-align middle
    &:hover
      opacity 1
  .main & h1
    padding-bottom 15px
    border-bottom 1px solid rgba($menu-bg, 0.2)
    text-align left
    max-width none
    @media (min-width: $sm-devices-min)
      font-size 32px
      
