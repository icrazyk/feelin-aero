.list-teach
  margin 0
  padding 0
  list-style-type none
  @media (min-width: $sm-devices-min)
    margin 0 -5px
  &__item
    margin-bottom 15px
    @media (min-width: $sm-devices-min)
      float left
      width 20%
      padding 0 5px
    div
      margin-left 10px
      display inline-block
      vertical-align middle
      width calc(100% - 75px)
      @media (min-width: $sm-devices-min)
        display block
        margin-left 0
        margin-top 10px
        text-align center
        width auto
    &:before
      content ""
      display inline-block
      vertical-align middle
      width 60px
      height 60px
      background-repeat no-repeat
      background-position center center
      background-size contain
      @media (min-width: $sm-devices-min)
        display block
        margin auto
    ^[1]
      &_expanding:before
        background-image url(./img/ico-expanding.png)
      &_infinite:before
        background-image url(./img/ico-infinite.png)
      &_freedom:before
        background-image url(./img/ico-freedom.png)        
      &_freeman:before
        background-image url(./img/ico-freeman.png)
      &_brain:before
        background-image url(./img/ico-brain.png)       
    
