$sm-devices-min = 768px
$md-devices-min = 992px
$lg-devices-min = 1200px

$menu-color = #fff
$menu-bg = #6666cc

clearfix()
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both

*
  box-sizing border-box

.container
  padding 0 20px
  max-width 1020px
  margin 0 auto

.row
  margin 0 -20px
  clearfix()

.header
  background url(img/header-bg.jpg) no-repeat left top
  padding 40px 0 0
  @media (min-width: $sm-devices-min)
    padding 100px 0 0
  @media (min-width: $md-devices-min)
    background-position center top
    padding 37px 0 0
    height 405px
  &__menu
    margin-top 40px
    @media (min-width: $sm-devices-min)
      margin-top 80px
    @media (min-width: $md-devices-min)
      margin-top 20px
  &-logo
    display block
    width 198px
    height 139px
    background url(img/logo.png)
    margin 0 auto
    @media (min-width: $md-devices-min)
      margin-left 180px
  &-menu
    &__menu
      clearfix()
      display none
      @media (min-width: $md-devices-min)
        display block
    &__toggle
      background $menu-bg
      clearfix()
      @media (min-width: $md-devices-min)
        display none

.menu
  margin 0
  padding 0
  list-style-type none
  &-toggle
    padding 10px 20px
    float left
    color $menu-color
    &__icon
      float left
      width 25px
      margin-right 10px
      span
        display block
        margin 3px 0
        background $menu-color
        height 2px
    &__title
      float left
  .header &
    clearfix()
    background $menu-bg
    border-radius 4px
    a
      display block
      padding 10px 20px
      color $menu-color
      text-decoration none
      &:hover
        background darken($menu-bg, 10%)
      &:active
        background darken($menu-bg, 15%)
    .current-menu-item > a
      background darken($menu-bg, 5%)
        
    & > .menu-item
      float left
      position relative
      &:hover 
        .sub-menu
          display block
      &:first-child > a
        border-radius 4px 0 0 4px
    .sub-menu
      display none
      position absolute
      top 100%
      left 0
      margin 0
      padding 0
      list-style-type none
      background $menu-bg
      border-radius 0 0 4px 4px
      & > .menu-item:last-child > a
        border-radius 0 0 4px 4px    
